<h2>Create New Figure</h2>

<form action="/figures" method="post">
  <label>Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  <br><br>

  <h3>Titles</h3>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>">
    <br>
  <% end %>
  <br>

  <h3>Create New Title:</h3>
  <input type="text" name="title[name]" id="new_title">
  <br><br>

  <h3>Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>">
    <br>
  <% end %>
  <br>

  <h3>Create New Landmark:</h3>
  <label>Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label>Year:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year">
  <br><br>
  
  <input type="submit" value="Create New Figure">
</form>
<br>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
