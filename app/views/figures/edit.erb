<h1>Edit Historical Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br><br><br>


  <h3>Landmarks:</h3>

  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %> (<%= landmark.year_completed %>)</label>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>>
    <br>
  <% end %>

  <h4>Add New Landmark:</h4>
  <label>Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br>
  <label>Year Completed: </label>
  <input type="text" name="landmark[year_completed]">
  <br><br><br>


  <h3>Titles:</h3>

  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>>
    <br>
  <% end %>

  <h4>Add New Title:</h4>
  <input type="text" name="title[name]" id="new_title">
  <br><br><br><br>

  
  <input type="submit" value="Edit Figure">

</form>
<br>
<a class="button" href="/figures">Figures</a>
